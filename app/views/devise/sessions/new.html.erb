<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.text_field :username, autofocus: true, placeholder: "username" %><br>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %><br>

  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "button" %>
  </div>
<% end %>

  <%= render "devise/shared/links" %>
