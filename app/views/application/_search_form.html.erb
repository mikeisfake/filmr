<%= form_tag this_page, method: :get do %>
  <%= text_field_tag('search', nil, placeholder: 'search for a movie') %>
  <%= hidden_field_tag :id, current_user.id %>

  <%= button_tag type: 'submit', class: "button" do %>
    <i class="fas fa-search"></i>
  <% end %>
<% end %>
<% if params[:search] %>
  <%= render 'movie_list' %>
<% end %>
