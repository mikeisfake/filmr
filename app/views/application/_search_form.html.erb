<div class="search_form">
<%= form_tag  do %>
  <%= text_field_tag('search', nil, placeholder: 'search for a movie') %>
  <%= hidden_field_tag :_method, :get %>

  <%= button_tag type: 'submit', class: "button" do %>
    <i class="fas fa-search"></i>
  <% end %>
<% end %>
<% if params[:search] %>
<%= render 'search_results' %>
<% end %>
</div>
