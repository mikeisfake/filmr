<section class="row">
  <div class="column col-left">
    <%= render 'movie_data' %>
  </div>

  <div class="column col-right">
    <p class="review-show"><%= @review.render_content %></p><br><br>
    posted on: <%= @review.date %><br>
    <% if !@review.tags.empty? %>
      <div class="row">
        <p>tags: </p>
        <% @review.tags.each do |tag| %>
          <%= link_to tag.name, tag_path(tag), class: "tag" %>
        <% end %>
      </div>
    <% end %>
  <br><br>
    <div class="row">
      <% if @review.owns? current_user %>
        <%= button_to review_path(@review), method: :delete, class: "button delete-button" do %>
          <%= fa_icon "trash" %>
        <% end %>
        <%= button_to edit_review_path(@review), method: :get, class: "button" do %>
          <%= fa_icon "edit" %>
        <%end%>
      <% end %>
      <%= render 'home_button' %>
    </div>
  </div>

</section>
