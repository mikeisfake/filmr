<h1>welcome <%= current_user.username if user_signed_in?%>.</h1>
<ul class="row">
  <% @follows.each do |user| %>
    <li><%= link_to user.username, user_path(user), class: "button" %></li>
  <% end %>
</ul><br>


<h1>reviews from people you follow.</h1>

<div class="movie-list row">
  <% all_follow_reviews(@follows, 25).each do |review|%>
    <div class="result-cards">
      <%= link_to image_tag(review.movie.poster), review_path(review) %>
      <div class="movie-details">
        <p>by: <%= link_to review.user.username, user_path(review.user) %></p>
      </div>
    </div>
  <% end %>
</div>
