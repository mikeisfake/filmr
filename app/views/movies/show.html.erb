<section class="row">
  <section class="column col-left">
    <%= render 'movie_data' %>
    <br>
    <div class="row">
      <%= button_to 'review this movie', new_movie_review_path(@movie), method: :get, class: "button" %>
      <%= render "home_button" %>
    </div>

  </section>

  <section class="column col-right">
    <% @movie.reviews.last(5).each do |review| %>
        <%= link_to review.render_content, review_path(review), class: "review button" %>
        <span class="row">
          <%= link_to review.user.username, user_path(review.user), class: "button" %>
        </span>
    <% end %>
  </section>
</section>
