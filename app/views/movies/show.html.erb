<section class="row">
  <section class="column col-left">
    <%= render 'movie_data' %>
    <br>
    <div class="row">
      <%= button_to 'review this movie', new_movie_review_path(@movie), method: :get, class: "button" %>
      <%= render "home_button" %>
    </div>

  </section>

  <section class="column col-right animated fadeInRight">
    <% if @movie.reviews.present? %><h2>reviews for <%=@movie.title %>:</h2><br><% end %>
    <% @movie.reviews.last(5).each do |review| %>
    <p><%= link_to review.user.username, user_path(review.user) %> said:</p>
    <%= link_to review.render_content, review_path(review), class: "review"%>
    <% end %>
  </section>

</section>
