<h1>welcome <%= current_user.username if user_signed_in?%>.</h1>

<section class="column">
  <%= render 'search_form' %>

  <% if params[:search] %>
    <%= render 'movie_list' %>
  <% end %>
</section>

<% if user_signed_in? %>
  <section class="column">
  <h2>recently reviewed movies.</h2>
  <ul class="row">
    <% current_user.movies.each do |m| %>
      <p class="result-cards"><%= link_to image_tag(m.poster), movie_path(m) %></p>
    <% end %>
  </ul>
  </section>
<% end %>
